{
  "eslint.useFlatConfig": true,
  // set severity of some rules on save in vscode development
  "eslint.rules.customizations": [
    {
      "rule": "no-console",
      "severity": "warn"
    },
    {
      "rule": "prefer-const",
      "severity": "warn"
    },
    {
      "rule": "no-unused-vars",
      "severity": "warn"
    },
    {
      "rule": "unused-imports/no-unused-imports",
      "severity": "warn"
    }
  ],
  "cSpell.words": [
    "bprogress",
    "frontmatter",
    "lingui",
    "magicui",
    "mdast",
    "opengraph",
    "precache",
    "rehype",
    "serwist",
    "shadcn",
    "shiki",
    "twoslash"
  ],
  "typescript.tsdk": "node_modules/typescript/lib"
}
